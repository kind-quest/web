<h2></h2>
<div class="container-fluid">
        <div class="card-container">

<%= image_tag "KindQuestLogo.png", id:"profile-img", class:"profile-img-card"%>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row margin" >
  <div class="padding field col-xs-10" >
    
    <%= f.email_field :email, autofocus: true, :placeholder => "Email address", class:"form-control"  %>
  </div>


  <div class="padding field col-xs-10">
    
    <% if @minimum_password_length %>
        <% end %>
    <%= f.password_field :password, autocomplete: "off" , :placeholder => "Password (8 characters minimum)", class:"form-control" %>
  </div>

  <div class="padding field col-xs-10">
    
    <%= f.password_field :password_confirmation, autocomplete: "off" , :placeholder => "Password confirmation", class:"form-control" %>
  </div>

  <div class="padding actions col-xs-10">
    <%= f.submit "Sign up",class:"btn btn-lg btn-primary btn-block btn-signin" %>
</div>
</div>

  </div>
  </div>
  </div>
<% end %>

<div class="align">
<%= render "devise/shared/links" %></div>
